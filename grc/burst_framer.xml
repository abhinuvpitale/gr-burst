<?xml version="1.0"?>
<block>
  <name>Burst Framer</name>
  <key>burst_framer</key>
  <category>burst</category>
  <import>import burst</import>
  <make>burst.framer($bs)</make>

  <param>
    <name>Blocksize</name>
    <key>bs</key>
    <value>1024</value>
    <type>int</type>
  </param>

  <sink>
    <name>packed_pdus</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>unpacked_pdus</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
