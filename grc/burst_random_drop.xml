<?xml version="1.0"?>
<block>
  <name>Burst Random Drop</name>
  <key>burst_random_drop</key>
  <category>burst</category>
  <import>import burst</import>
  <make>burst.random_drop($p_drop, $delay)</make>

  <param>
    <name>p(drop) [0,1]</name>
    <key>p_drop</key>
    <value>0.1</value>
    <type>float</type>
  </param>

  <param>
    <name>Delay(s)</name>
    <key>delay</key>
    <value>1.0</value>
    <type>float</type>
  </param>

  <sink>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
